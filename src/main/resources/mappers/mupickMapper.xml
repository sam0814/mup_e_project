<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.mupe.mupick.dao.MupickMapper">
 	<select id="selectPostList" resultType="map">
 		SELECT
 			*
 		FROM
 			`mupick_post`
 	</select>
 	
 	
 	<select id="selectPostListByUserId" parameterType="int" resultType="com.mupe.mupick.domain.Mupick">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`mupick_post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` DESC
	</select>
 	
 	
 
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `mupick_post`
 		(
 			`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
			, #{subject}
			, #{content}
			, #{imagePath}
			, NOW()
			, NOW()
 		)
 	</insert>
 	
 	<select id="selectPostByPostIdAndUserId" parameterType="map" resultType="com.mupe.mupick.domain.Mupick">
		SELECT
			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`mupick_post`
		WHERE
			`userId` = #{userId}
			AND `id` = #{postId}
	</select>
	
	<update id="updatePostByIdAndUserId" parameterType="map">
		UPDATE `mupick_post`
		SET
			`subject` = #{subject}
			, `content` = #{content}
			<!-- imagePath가 있을때만 수정 -->
			<if test="imagePath != null">
			, `imagePath` = #{imagePath}
			</if>
			, `updatedAt` = NOW()
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</update>
	
	<delete id="deletePostByIdAndUserId" parameterType="map">
		DELETE
		FROM
			`mupick_post`
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
	</delete>
 </mapper>